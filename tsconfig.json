{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"target": "ESNext"
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.test.ts"],
	"ts-node": {
		"esm": true
	}
}
