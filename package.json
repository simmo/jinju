{
  "name": "jinju",
  "version": "0.0.1-beta.12",
  "description": "Opinionated Node CLI Toolkit",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:cjs & npm run build:esm & npm run build:types",
    "build:cjs": "tsc -m CommonJS -t ES6 --outDir dist/cjs",
    "build:esm": "tsc -m ESNext -t ESNext --outDir dist/esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "coverage": "vitest run --coverage",
    "dev": "tsx --watch ./src/example.ts",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "release-it",
    "test": "vitest",
    "typecheck": "tsc --noEmit --extendedDiagnostics"
  },
  "repository": "github:simmo/jinju",
  "keywords": [
    "node",
    "cli",
    "command-line",
    "toolkit",
    "dx"
  ],
  "files": [
    "dist"
  ],
  "author": "Mike Simmonds (https://mike.id)",
  "license": "MIT",
  "bugs": "https://github.com/simmo/jinju/issues",
  "homepage": "https://github.com/simmo/jinju#readme",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@release-it/keep-a-changelog": "^7.0.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@types/node": "^22.15.14",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "release-it": "^19.0.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "is-unicode-supported": "^2.1.0",
    "sisteransi": "^1.0.5",
    "yoctocolors": "^2.1.1"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "*.yml",
          "package.json",
          "package-lock.json"
        ],
        "options": {
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  },
  "release-it": {
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "addUnreleased": true,
        "addVersionUrl": true,
        "filename": "CHANGELOG.md"
      }
    }
  }
}
